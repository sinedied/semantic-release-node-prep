{
  "name": "semantic-release-node-prep",
  "version": "2.0.0",
  "description": "Shareable configuration for automated node package versioning with changelog generation using semantic-release, tailored for OSS projects",
  "repository": "sinedied/semantic-release-node-prep",
  "homepage": "https://github.com/sinedied/semantic-release-node-prep",
  "bugs": {
    "url": "https://github.com/sinedied/semantic-release-node-prep/issues"
  },
  "keywords": [
    "semantic-release",
    "semantic-release-config",
    "changelog",
    "version",
    "bump",
    "git"
  ],
  "main": "config.json",
  "scripts": {
    "test": "xo",
    "release:check": "semantic-release -b main -e semantic-release-npm-github --dry-run"
  },
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "license": "MIT",
  "dependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^8.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2"
  },
  "devDependencies": {
    "semantic-release": "^18.0.0",
    "semantic-release-npm-github": "^2.0.0",
    "xo": "^0.45.0"
  },
  "peerDependencies": {
    "semantic-release": ">=18.0.0"
  },
  "xo": {
    "space": true,
    "prettier": true
  },
  "files": [
    "config.json"
  ]
}
